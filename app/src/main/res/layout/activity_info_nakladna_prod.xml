<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.InfoOfNakladna.InfoOfNakladnaProdView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/fields"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="      Договір №:      "
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/spinnerdogovir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:scrollbarStyle="insideInset"
                        android:spinnerMode="dialog"
                        android:textDirection="firstStrong" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewKekv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/fields"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Тип КЕКВ:"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/spinnerkekv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:scrollbarStyle="insideInset"
                        android:spinnerMode="dialog"
                        android:textDirection="firstStrong" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/fields"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Тип постачання:"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/spinnertype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:scrollbarStyle="insideInset"
                        android:spinnerMode="dialog"
                        android:textDirection="firstStrong" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Дата накладної"
                        android:textColor="#34eb67"
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fields_edit"
                        android:gravity="left"
                        android:hint="Встановіть дату накладної"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Номер пломби"
                        android:textColor="#34eb67"
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/editTextPlomba"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fields_edit"
                        android:ems="10"
                        android:hint="Вкажіть номер пломби"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Номер накладної"
                        android:textColor="#34eb67"
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/editTextnumber_nakladna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fields_edit"
                        android:ems="10"
                        android:hint="Введіь номер накладної"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Марка автомобіля"
                        android:textColor="#34eb67"
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/editTextMarkaAvto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fields_edit"
                        android:ems="10"
                        android:hint="Введіь марку автомобіля"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Номерни знак автомобіля"
                        android:textColor="#34eb67"
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/editTextNomerZnak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fields_edit"
                        android:ems="10"
                        android:hint="Введіь номерний знак автомобіля"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="П.І.Б. водія"
                        android:textColor="#34eb67"
                        android:textSize="15dp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/editTextVodii"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/fields_edit"
                        android:ems="10"
                        android:hint="Введіть П.І.Б. водія"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="" />

                    <Button
                        android:visibility="visible"
                        android:text="Продовжити"
                        android:background="#34eb67"
                        android:backgroundTintMode="screen"
                        android:id="@+id/butInfoNakladna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</RelativeLayout>